import java.util.*;

class Student { // Corrected class name from "student" to "Student"
    public static void main(String arg[]) { // Corrected "string" to "String"
        Scanner sc = new Scanner(System.in);
        System.out.println("Enter a number ");
        int num = sc.nextInt();
        if (num % 2 == 0) {
            System.out.println(num + " is even"); // Corrected the logic to check the first number
        } else {
            System.out.println(num + " is odd");
        }
    }
}


